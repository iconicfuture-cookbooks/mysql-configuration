SET FOREIGN_KEY_CHECKS=0;

SET SQL_MODE="NO_AUTO_VALUE_ON_ZERO";
SET time_zone = "+00:00";

--
-- Create database
--
DROP DATABASE IF EXISTS <%= @config['name'] %>;
CREATE DATABASE <%= @config['name'] %> DEFAULT CHARACTER SET utf8 COLLATE utf8_general_ci;
USE <%= @config['name'] %>;


--
-- Create user
--
GRANT SELECT, INSERT, UPDATE, DELETE ON <%= @config['name'] %>.* TO <%= @config['user'] %>@<%= @config['host'] %> IDENTIFIED BY '<%= @config['password'] %>';

SET FOREIGN_KEY_CHECKS=1;